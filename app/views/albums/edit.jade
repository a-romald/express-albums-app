extends ../layout

block content
  center
    h2 #{title}

  if errors
    for error in errors
        p.error #{error}

  form.album_form(method="POST"
    action="")

    label(for="title") Title:
    input(type="text"
         name="title"
         value="#{album[0].title}"
         required)
    br

    label(for="description") Description:
    textarea(name="description"
            cols="30"
            rows="5"
            required) #{album[0].description}
    br

    input(type="hidden"
             name="id"
             value="#{album[0].id}")

    input(type="submit"
         name="edit"
         value="Edit album")
