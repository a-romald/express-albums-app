extends ../layout

block content
  center
    h2 #{title}

  if errors
    for error in errors
        p.error #{error}

  form.album_form(method="POST"
    action="")

    label(for="title") Title:
    input(type="text"
         name="title"
         value=""
         required)
    
    br

    label(for="description") Description:
    textarea(name="description"
            cols="30"
            rows="5"
            required)
    br

    input(type="submit"
         name="add"
         value="Add album")
